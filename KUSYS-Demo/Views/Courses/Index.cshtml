@model IEnumerable<KUSYS_Demo.Models.ViewModel.Student_CourseViewModel>
@{
    ViewData["Title"] = "Course List";
}
<h1>Course list with matching students </h1>
<p>
    <a class="btn btn-outline-success" asp-action="Create">Enroll new student</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                 <td>
                    <a class="btn btn-outline-danger" asp-controller="Courses" asp-action="DeleteEnrolment" asp-route-StudentId="@item.StudentId" asp-route-Id="@item.Id">Disenroll</a>
                </td>
            </tr>
        }
    </tbody>
</table>
